<?xml version="1.0"?>
<launch>
    <arg name="model" default="$(find robot_description)/urdf/cortex.xacro"/>
    <arg name="rvizconfig" default="$(find robot_description)/rviz/urdf.rviz" />

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />

    <param name="encoder/ticks_per_rev" type="int" value="3200" />
    <param name="wheel/diameter" type="double" value="0.06" />
    <param name="wheel/separation/vertical" type="double" value="0.15" />
    <param name="wheel/separation/horizontal" type="double" value="0.15" />

    <node name="encoder_odom" pkg="mecanum" type="encoder_odom.py" />

    <param name="use_gui" value="false"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
</launch>