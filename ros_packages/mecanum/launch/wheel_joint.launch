<?xml version="1.0"?>
<launch>
    <arg name="model" default="$(find robot_description)/urdf/cortex.xacro"/>
    <arg name="rvizconfig" default="$(find robot_description)/rviz/urdf.rviz" />

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />

    <node name="encoder_jointstate_front_left" pkg="mecanum" type="encoder_jointstate.py">
        <param name="encoder/position" type="string" value="front/left" />
        <param name="encoder/ticks_per_rev" type="int" value="3200" />
    </node>

    <node name="encoder_jointstate_front_right" pkg="mecanum" type="encoder_jointstate.py">
        <param name="encoder/position" type="string" value="front/right" />
        <param name="encoder/ticks_per_rev" type="int" value="3200" />
    </node>

    <node name="encoder_jointstate_rear_left" pkg="mecanum" type="encoder_jointstate.py">
        <param name="encoder/position" type="string" value="rear/left" />
        <param name="encoder/ticks_per_rev" type="int" value="3200" />
    </node>

    <node name="encoder_jointstate_rear_right" pkg="mecanum" type="encoder_jointstate.py">
        <param name="encoder/position" type="string" value="rear/right" />
        <param name="encoder/ticks_per_rev" type="int" value="3200" />
    </node>

    <param name="use_gui" value="false"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
</launch>