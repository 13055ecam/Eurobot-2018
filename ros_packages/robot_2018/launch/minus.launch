<launch>
    <arg name="simulate_motors" default="false" />
    <arg name="raspberry" default="false" />
    <arg name="viz" default="false" />
    <arg name="model" default="$(find robot_description)/urdf/minus.xacro"/>
    <arg name="rvizconfig" default="$(find differential_driver)/rviz/robot.rviz" />

    <rosparam command="load" file="$(find robot_2018)/param/wheel.yaml" />
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />

    <include file="$(find differential_driver)/launch/minus.launch" />
    <include file="$(find navigation)/launch/move_base_minus.launch" />
    <include file="$(find navigation)/launch/initialpose.launch" />
    <include if="$(arg raspberry)" file="$(find strategy)/launch/startup_conf.launch" />

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <group if="$(arg viz)">
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
    </group>

    <group if="$(arg simulate_motors)">
        <node name="motor_sim_minus" pkg="differential_driver" type="motor_sim.py" />
    </group>
</launch>
